<article class="blog-post-wrapper archive-type-<%= post.layout %>">
    <div class="figure">
        <div class="post-thumbnail">        
            <a href="<%- url_for(post.path) %>"><img src="<%- url_for(post.photos[0]) %>" alt="<%= post.title || '(no title)' %>" class="scale" data-scale="best-fill" data-align="center" /></a>
        </div>
        <i class="fa fa-file-photo-o"></i>
    </div>
    <!-- /.figure -->
    <header class="entry-header">
        <div class="post-meta">
            <span class="the-category"> 
                <%- partial('post/tag') %>
            </span>
        </div>
        <a href="<%- url_for(post.path) %>"><h2 class="entry-title"><%= post.title || '(no title)' %></h2></a>
        <div class="entry-meta">
            <ul class="list-inline">
                <li>
                    <span class="the-time">
            <%- partial('post/date', {class_name: 'article-date', date_format: config.date_format}) %>
          </span>
                </li>
                <li>
                    <span class="the-share">
                      <a data-url="<%- post.permalink %>" data-id="<%= post._id %>" class="article-share-link">
                        <i class="fa fa-share-alt"></i> Share
                      </a>
                    </span>
                </li>
                <li>
                    <span class="the-comments">
            <a href="#" title="">05</a>
          </span>
                </li>
            </ul>
        </div>
        <!-- .entry-meta -->
    </header>
    <!-- .entry-header -->
</article>
